<h1>Liste des Actualite</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Contenu</th>
            <th>En ligne</th>
            <th>Date de Publication</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.title }}</td>
            <td>{{ entity.text }}</td>
            <td>{{ entity.isOnLine }}</td>
            <td>{{ entity.publicationDate|date('Y-m-d') }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('actualite_edit', { 'id': entity.id }) }}">Éditer</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('actualite_new') }}">
        Créer une nouvelle Actualité
        </a>
    </li>
</ul>
