{% extends "ActEnvactualiteBundle:ActualiteAdmin:layout_admin.html.twig" %}

            {% block content %}

<h2>Liste des Actualite</h2>

<table class="records_list">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Image</th>
            <th>Contenu</th>
            <th>En ligne</th>
            <th>Date de Publication</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('actualite_edit', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
            <td>
            {% if entity.getWebPath %}
              <img src="{{ entity.getWebPath | apply_filter('admin_list') }}" width="119" height="74"/>
            {% else %}
              <img src="{{ asset('bundles/actenvmain/images/depot_interdit.jpg') | apply_filter('admin_list') }}" width="119" height="74"></div>
           {% endif %}
            </td>
            <td>{{ entity.text }}</td>
            <td>
            {% if entity.isOnLine %}
            <img width="16" height="16" src="{{ asset('bundles/actenvmain/images/icons/tick.png') }}" />
            {% else %}
            <img width="16" height="16" src="{{ asset('bundles/actenvmain/images/icons/cancel.png') }}" />

            {% endif %}
            </td>
            <td>{{ entity.publicationDate|date('Y-m-d') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

        <a href="{{ path('actualite_new') }}">
        Créer une nouvelle Actualité
        </a>
            {% endblock %}
