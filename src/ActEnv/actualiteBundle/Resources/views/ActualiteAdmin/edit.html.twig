{% extends "ActEnvactualiteBundle:ActualiteAdmin:layout_admin.html.twig" %}

            {% block content %}

<h2>Modifier une Actualite</h2>

<form action="{{ path('actualite_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>



<p>
        {{ form_label(edit_form.title) }}<br />
        {{ form_errors(edit_form.title) }}
        {{ form_widget(edit_form.title, {'attr':{'size' : '50'}}) }}
</p>

<p>
        {{ form_label(edit_form.text) }}<br />
        {{ form_errors(edit_form.text) }}
        {{ form_widget(edit_form.text, {'attr':{'cols' : '90', 'rows' : '10'}}) }}
</p>

<p>
        {{ form_label(edit_form.isOnLine) }}<br />
        {{ form_errors(edit_form.isOnLine) }}
        {{ form_widget(edit_form.isOnLine) }}
</p>

<p>
        {{ form_label(edit_form.publicationDate) }}<br />
        {{ form_errors(edit_form.publicationDate) }}
        {{ form_widget(edit_form.publicationDate) }}
</p>
<p>
{% if entity.getWebpath %}
<img src="{{ entity.getWebPath | apply_filter('actualite') }}" width="238" height="148"/>
{% endif %}
</p>


        {{ form_rest(edit_form) }}
    <p>
        <button class="button" type="submit">Enregistrer les modifications</button>
    </p>
</form>

    {% include 'ActEnvactualiteBundle:ActualiteAdmin:retour_list.html.twig' %}

        <form action="{{ path('actualite_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Supprimer cette Actualit√©</button>
        </form>
            {% endblock %}
